<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/team_placeholder1"
        android:id="@+id/teamA_badge"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/cell_left_margin"
        android:layout_marginTop="20dp" />

    <ImageView
        android:src="@drawable/team_placeholder2"
        android:id="@+id/teamB_badge"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/cell_right_margin"
        android:layout_marginTop="20dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:background="@color/yellow"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:textSize="21dp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:text="3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:textSize="13dp"
                android:textColor="@color/red"
                android:text="(7)"/>
        </LinearLayout>


        <LinearLayout
            android:background="@color/yellow"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/textGray"
                android:textSize="10dp"
                android:text="2014年12月12日"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/textGray"
                android:textSize="20dp"
                android:text="1/4决赛"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/textGray"
                android:textSize="10dp"
                android:text="12:15"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/textGray"
                android:textSize="14dp"
                android:text="已结束" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:background="@color/yellow"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:textSize="21dp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:text="3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="13dp"
                android:textColor="@color/red"
                android:text="(7)"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>