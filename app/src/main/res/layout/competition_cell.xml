<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/image_cup"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/cell_left_margin"
        android:src="@drawable/competition_cup_0"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/competition_name"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"/>

    <ImageView android:layout_width="@dimen/cell_indicator_width"
        android:layout_height="@dimen/cell_indiator_height"
        android:src="@drawable/indicator"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/cell_right_margin"
        android:layout_centerVertical="true" />
</RelativeLayout>
